<!DOCTYPE>
<html>
  <head></head>
  <body>
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= @book.errors.count %> errors prohibited this book from being saved</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model:@book do |f| %>
      <div class="field">
        <% if @book.errors.any? %><div class="error_field"><% end %>
        <label for="title">Title</label>
        <% if @book.errors.any? %></div><% end %>
        <% if @book.errors.any? %><div class="error_field"><% end %>
        <%= f.text_field :title %>
        <% if @book.errors.any? %></div><% end %>
      </div>

      <div class="field">
        <% if @book.errors.any? %><div class="error_field"><% end %>
        <label for="body">Body</label>
        <% if @book.errors.any? %></div><% end %>
        <% if @book.errors.any? %><div class="error_field"><% end %>
        <%= f.text_area :body %>
        <% if @book.errors.any? %></div><% end %>
      </div>

      <div class="field">
        <%= f.submit 'UpdateBook' %>
      </div>
    <% end %>
    <%= link_to "Show","/books/#{@book.id}" %>
    |
    <a href="/books">Back</a>
  </body>
</html>